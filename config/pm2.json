{
  "apps": [
    {
      "name": "api",
      "script": "./boldrAPI/index.js",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
        "postgres__uri": "postgres://postgres:password@localhost:5432/boldr"
      },
      "error_file": "./logs/boldrAPI-error.log",
      "out_file": "./logs/boldrAPI-out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z"
    },
    {
      "name": "ssr",
      "script": "./boldrCMS/server.js",
      "watch": false,
      "env": {
        "NODE_ENV": "production",
      },
      "error_file": "./logs/boldrSSR-error.log",
      "out_file": "./logs/boldrSSR-out.log",
      "merge_logs": true,
      "log_date_format": "YYYY-MM-DD HH:mm Z"
    },
  ]
}
