{
  "extends": ["boldr"],
  "env": {
    "browser": true,
    "es6": true,
    "node": false,
    "mocha": true,
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "impliedStrict": true,
    "sourceType": "module",
    "jsx": true,
  },
  "ecmaFeatures": {
    "defaultParams": true,
  },
  "plugins": ["flowtype", "import", "react"],
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true,
    }
  },
  "globals": {
    "React": true
  },
  "rules": {
    "no-undef": 0
    }
}
