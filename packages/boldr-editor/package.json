{
  "name": "boldr-editor",
  "version": "0.7.1",
  "main": "lib/index.js",
  "author": "Steven Truesdell <steven@strues.io>",
  "description": "Draft-JS editor for Boldr",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "homepage": "https://github.com/strues/boldr#readme",
  "main": "lib/index",
  "module": "lib/index.js",
  "jsxnext:main": "lib/index.js",
  "files": [
    "lib/index.js",
    "lib/Renderer.js",
    "lib/BoldrEditor.js",
    "lib/boldreditor.css"
  ],
  "keywords": [
    "draftjs",
    "editor",
    "richtext",
    "react"
  ],
  "scripts": {
    "test": "jest",
    "babel": "babel src --out-dir lib",
    "test:ci": "NODE_ENV=test CI=true jest -w 2",
    "build:sass": "./node_modules/.bin/node-sass --output-style compressed src/styles/main.scss > lib/boldreditor.css",
    "webpack": "./node_modules/.bin/webpack-dev-server"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/test/assetMock.js",
      "^.+\\.(css|scss)$": "<rootDir>/tools/test/styleMock.js"
    },
    "collectCoverage": false,
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "setupFiles": [
      "<rootDir>/tools/test/setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(tools|docs|node_modules|bin|flow-typed|public)/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.8",
    "babel-plugin-module-resolver": "^2.4.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.26.0",
    "enzyme": "^2.6.0",
    "enzyme-to-json": "^1.3.0",
    "eslint": "^3.11.1",
    "eslint-config-boldr": "^0.7.0",
    "eslint-import-resolver-babel-module": "^2.2.1",
    "eslint-plugin-flowtype": "^2.29.1",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.37.4",
    "html-loader": "^0.4.4",
    "jest-cli": "^18.0.0",
    "json-loader": "^0.5.4",
    "node-sass": "^4.1.1",
    "postcss-cssnext": "^2.9.0",
    "postcss-loader": "^1.1.1",
    "postcss-smart-import": "^0.6.0",
    "react": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-hot-loader": "3.0.0-beta.6",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "2.1.0-beta.26",
    "webpack-dev-server": "2.1.0-beta.11"
  },
  "dependencies": {
    "draft-js": "^0.9.1",
    "draft-js-export-html": "0.5.2",
    "draft-js-import-html": "^0.3.2",
    "immutable": "^3.8.1"
  },
  "peerDependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  }
}
