{
  "name": "boldr",
  "version": "0.6.6",
  "description": "Your dreams are bold. Your thoughts are bold. So why shouldn't your CMS be a little Boldr?",
  "main": "boldrCMS/server/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/strues/boldr.git"
  },
  "keywords": [
    "react",
    "universal",
    "javascript",
    "express",
    "webpack",
    "postgres",
    "node",
    "cms",
    "redux"
  ],
  "author": "Steven Truesdell <steven@strues.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/strues/boldr/issues"
  },
  "homepage": "https://github.com/strues/boldr#readme",
  "engines": {
    "node": ">=7.0.0",
    "npm": ">=3.0.0",
    "yarn": "^0.17.0"
  },
  "betterScripts": {
    "dev": {
      "command": "node ./tools/development",
      "env": {
        "DEBUG": "boldr:*",
        "NODE_ENV": "development",
        "BABEL_ENV": "development"
      }
    }
  },
  "scripts": {
    "analyze": "node tools/scripts/analyze",
    "build": "node tools/scripts/build",
    "clean": "node tools/scripts/clean",
    "cleanup": "rimraf .happypack && rimraf boldrCMS/",
    "dev": "better-npm-run dev",
    "flow": "node ./tools/scripts/flow",
    "flow:defs": "flow-typed install -f 0.34 --overwrite",
    "lint": "./node_modules/.bin/eslint src",
    "lint:fix": "npm run lint -- --fix",
    "start": "NODE_ENV=production node bin/boldr",
    "start:cms": "NODE_ENV=production pm2 start boldrCMS/server/index.js --name boldrSSR -e logs/boldrSSR-error.log",
    "test:ci": "NODE_ENV=test CI=true jest -w 2",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch=all"
  },
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/test/styleMock.js",
      "^.+\\.(css|scss)$": "<rootDir>/tools/test/styleMock.js"
    },
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/tools/",
      "<rootDir>/docs/",
      "<rootDir>/flow-typed/",
      "<rootDir>/bin/",
      "<rootDir>/boldrCMS/",
      "<rootDir>/.happypack/",
      "<rootDir>/public/",
      "<rootDir>/src/client/",
      "<rootDir>/src/common/types/",
      "<rootDir>/src/common/theme/",
      "<rootDir>/src/server/"
    ],
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    },
    "testPathDirs": [
      "<rootDir>/src"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/tools/test/setup.js",
    "testPathIgnorePatterns": [
      "<rootDir>/(tools|docs|node_modules|bin|flow-typed|public)/"
    ],
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "boldr-editor": "^0.6.6",
    "chalk": "^1.1.3",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "date-fns": "^1.11.2",
    "debug": "^2.3.3",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "helmet": "^3.1.0",
    "hpp": "^0.2.1",
    "http-proxy": "^1.15.2",
    "humps": "^2.0.0",
    "immutability-helper": "^2.0.0",
    "invariant": "^2.2.2",
    "isomorphic-fetch": "^2.2.1",
    "lodash": "^4.17.2",
    "normalizr": "^2.2.1",
    "react": "^15.4.1",
    "react-addons-css-transition-group": "^15.4.1",
    "react-addons-shallow-compare": "^15.4.1",
    "react-addons-transition-group": "^15.4.1",
    "react-dnd": "^2.1.4",
    "react-dnd-html5-backend": "^2.1.2",
    "react-dom": "^15.4.1",
    "react-helmet": "^3.2.2",
    "react-redux": "~4",
    "react-router": "3",
    "react-router-redux": "^4.0.7",
    "react-router-scroll": "^0.4.1",
    "redux": "^3.6.0",
    "redux-connect": "^4.0.2",
    "redux-form": "^6.2.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.1.0",
    "reselect": "^2.5.4",
    "semantic-ui-react": "^0.61.7",
    "serialize-javascript": "^1.3.0",
    "source-map-support": "^0.4.6",
    "styled-components": "^1.1.2",
    "superagent": "^3.1.0",
    "webfontloader": "^1.6.27"
  },
  "devDependencies": {
    "assets-webpack-plugin": "^3.5.0",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-module-resolver": "2.x",
    "babel-preset-boldr": "0.1.4",
    "babel-preset-latest": "^6.16.0",
    "babel-register": "^6.18.0",
    "better-npm-run": "^0.0.13",
    "chai": "^3.5.0",
    "chokidar": "^1.6.1",
    "css-loader": "^0.26.0",
    "cz-conventional-changelog": "^1.2.0",
    "enzyme": "2",
    "enzyme-to-json": "^1.3.0",
    "eslint": "^3.11.1",
    "eslint-config-boldr": "1.2.4",
    "extract-text-webpack-plugin": "2.0.0-beta.4",
    "file-loader": "^0.9.0",
    "flow-bin": "^0.36.0",
    "glob": "7.1.1",
    "happypack": "^3.0.0",
    "jest-cli": "^17.0.3",
    "json-loader": "^0.5.4",
    "md5": "^2.2.1",
    "nock": "^9.0.2",
    "node-notifier": "^4.6.1",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1",
    "postcss-cssnext": "^2.9.0",
    "postcss-loader": "1.1.1",
    "postcss-smart-import": "^0.6.0",
    "react-addons-perf": "^15.4.1",
    "react-addons-test-utils": "^15.4.1",
    "react-hot-loader": "3.0.0-beta.6",
    "redux-mock-store": "^1.2.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "supertest": "^2.0.1",
    "supertest-as-promised": "^4.0.2",
    "sw-precache-webpack-plugin": "^0.6.3",
    "url-loader": "^0.5.7",
    "webpack": "2.1.0-beta.27",
    "webpack-bundle-analyzer": "^2.1.1",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2",
    "webpack-md5-hash": "^0.0.5",
    "webpack-node-externals": "^1.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
